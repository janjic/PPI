{% extends '@EasyAdmin/default/layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block head_stylesheets %}
    {{ parent() }}
    <style>
        header.main-header,
        aside.main-sidebar {
            display: none;
        }
        .wrapper {
            background: #F5F5F5;
        }
        .fixed .content-wrapper {
            margin-left: 0;
            padding-top: 0;
        }
        #welcome .content-wrapper {
            background-image: url("{{ asset('bundles/app/img/movie-918655_1280.jpg') }}");
        }
        #welcome .box--secondary h1 {
            color: #fff;
            text-transform: uppercase;
            text-align: center;
        }
        #welcome .box--secondary h1 span {
            background-color: rgba(51, 51, 51, 0.65);
            padding: 20px;
        }
        #welcome .box--primary h1 {
            text-align: center;
        }
        #welcome .box--primary h1 span,
        #welcome .box--primary label {
            color: #fff;
        }
        #welcome .box--primary h1 {
            margin-bottom: 40px!important;
        }

        .remember-check {
            margin-top:0;
            margin-bottom: 30px!important;
            color: #fff;
        }
        body#welcome #main .box--primary {
            background-color: rgba(51, 51, 51, 0.65)!important;
            border: 1px solid rgba(51, 51, 51, 0.65)!important;
        }

    </style>
{% endblock %}

{% block page_title 'Prop identifier' %}
{% block body_id 'welcome' %}

{% block header '' %}
{% block sidebar '' %}
{% block main %}
    <div class="box box--secondary">
        <h1><span>Prop identifier</span></h1>

        </div>

    <div class="box box--primary">
        <div class="row">
            <h1 class="col-sm-12">
                <span><i class="fa fa-lock"></i>
                Log in to start using the backend</span>
            </h1>

            <div class="col-sm-12">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if error %}
                        <div class="has-error">
                            <p class="error-block">
                                <span class="label label-danger">
                                    {{ 'errors'|transchoice(1, domain = 'EasyAdminBundle') }}
                                </span>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </p>
                        </div>
                    {% endif %}

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="row">
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <label for="username">{{ 'security.login.username'|trans }}</label>
                                <input class="form-control" type="text" id="username" name="_username" required="required" />
                            </div>
                        </div>
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <label for="password">{{ 'security.login.password'|trans }}</label>
                                <input class="form-control" type="password" id="password" name="_password" required="required" />
                            </div>
                        </div>
                        <div class="col-md-6 col-md-offset-3">
                            <div class="checkbox remember-check">
                                <label>
                                    <input type="checkbox" checked id="remember_me" name="_remember_me" value="on" />
                                    {{ 'security.login.remember_me'|trans }}
                                </label>
                            </div>
                         </div>
                        <div class="col-md-6 col-md-offset-3">
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary" id="_submit" name="_submit">{{ 'security.login.submit'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

            <hr class="visible-xs" />
        </div>
    </div>
{% endblock %}
